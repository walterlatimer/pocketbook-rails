<div class="main">
  <div class="container">
    <div class="row">
      <div class="col-md-7">
        <h1>Login</h1>


        <%= form_for(:session, url: login_path) do |f| %>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>

          <%= f.submit "Log in", class: "btn" %>
        <% end %>


      </div>
    </div>
  </div>
</div>